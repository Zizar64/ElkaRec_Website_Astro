---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contact - ElkaRec" description="Contactez ElkaRec pour vos projets audiovisuels et événementiels">
  <Header />

  <main class="pt-24 pb-20">
    <!-- Hero Section -->
    <section class="container mx-auto px-6 py-16">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6 text-red-500">
          Contactez-nous
        </h1>
        <p class="text-xl text-zinc-400">
          Une question, un projet ? Nous sommes là pour vous répondre
        </p>
      </div>
    </section>

    <!-- Contact Content -->
    <section class="container mx-auto px-6 py-12">
      <div class="max-w-5xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Contact Form -->
          <div class="bg-zinc-900 rounded-2xl border border-zinc-800 p-8">
            <h2 class="text-2xl font-bold text-white mb-6">Envoyez-nous un message</h2>

            <form class="space-y-6" method="POST" action="https://api.web3forms.com/submit" id="contact-form">
              <!-- Web3Forms Access Key -->
              <input type="hidden" name="access_key" value="6d5ac646-89c3-4369-aec5-7f0ce1276646">

              <!-- Honeypot Spam Protection -->
              <input type="checkbox" name="botcheck" class="hidden" style="display: none;">

              <!-- Redirect URL after successful submission -->
              <input type="hidden" name="redirect" value="false">

              <!-- Name -->
              <div>
                <label for="name" class="block text-sm font-medium text-zinc-300 mb-2">
                  Nom *
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 bg-zinc-950 border border-zinc-800 rounded-lg text-white placeholder-zinc-500 focus:border-red-500 focus:ring-1 focus:ring-red-500 outline-none transition"
                  placeholder="Votre nom"
                />
              </div>

              <!-- Email -->
              <div>
                <label for="email" class="block text-sm font-medium text-zinc-300 mb-2">
                  Email *
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 bg-zinc-950 border border-zinc-800 rounded-lg text-white placeholder-zinc-500 focus:border-red-500 focus:ring-1 focus:ring-red-500 outline-none transition"
                  placeholder="votre@email.com"
                />
              </div>

              <!-- Subject -->
              <div>
                <label for="subject" class="block text-sm font-medium text-zinc-300 mb-2">
                  Sujet *
                </label>
                <select
                  id="subject"
                  name="subject"
                  required
                  class="w-full px-4 py-3 bg-zinc-950 border border-zinc-800 rounded-lg text-white focus:border-red-500 focus:ring-1 focus:ring-red-500 outline-none transition"
                >
                  <option value="">Choisissez un sujet</option>
                  <option value="service">Demande de service</option>
                  <option value="join">Rejoindre l'association</option>
                  <option value="partnership">Partenariat</option>
                  <option value="other">Autre</option>
                </select>
              </div>

              <!-- Message -->
              <div>
                <label for="message" class="block text-sm font-medium text-zinc-300 mb-2">
                  Message *
                </label>
                <textarea
                  id="message"
                  name="message"
                  required
                  rows="6"
                  class="w-full px-4 py-3 bg-zinc-950 border border-zinc-800 rounded-lg text-white placeholder-zinc-500 focus:border-red-500 focus:ring-1 focus:ring-red-500 outline-none transition resize-none"
                  placeholder="Décrivez votre projet ou votre demande..."
                ></textarea>
              </div>

              <!-- Submit Button -->
              <button
                type="submit"
                id="submit-button"
                class="w-full px-8 py-4 bg-red-500 hover:bg-red-600 text-white font-semibold rounded-lg transition-all transform hover:scale-105 disabled:opacity-50 disabled:cursor-not-allowed"
              >
                Envoyer le message
              </button>

              <!-- Success Message -->
              <div id="success-message" class="hidden p-4 bg-green-500/20 border border-green-500/50 rounded-lg text-green-400 text-center">
                ✓ Message envoyé avec succès ! Nous vous répondrons sous 48h.
              </div>

              <!-- Error Message -->
              <div id="error-message" class="hidden p-4 bg-red-500/20 border border-red-500/50 rounded-lg text-red-400 text-center">
                ✗ Une erreur s'est produite. Veuillez réessayer.
              </div>

              <p class="text-sm text-zinc-500 text-center">
                * Champs obligatoires
              </p>
            </form>
          </div>

          <!-- Contact Info -->
          <div class="space-y-8">
            <!-- Info Block -->
            <div class="bg-gradient-to-br from-red-900/20 to-zinc-900/50 rounded-2xl border border-zinc-800 p-8">
              <h2 class="text-2xl font-bold text-white mb-6">Informations</h2>

              <div class="space-y-6">
                <!-- Location -->
                <div class="flex items-start gap-4">
                  <div class="w-12 h-12 bg-red-500/20 rounded-lg flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-white mb-1">Localisation</h3>
                    <p class="text-zinc-400">Paris, Île-de-France</p>
                  </div>
                </div>

                <!-- Response Time -->
                <div class="flex items-start gap-4">
                  <div class="w-12 h-12 bg-red-500/20 rounded-lg flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-white mb-1">Temps de réponse</h3>
                    <p class="text-zinc-400">Nous répondons généralement sous 48h</p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Social Links -->
            <div class="bg-zinc-900 rounded-2xl border border-zinc-800 p-8">
              <h3 class="text-xl font-bold text-white mb-6">Suivez-nous</h3>

              <div class="grid grid-cols-2 gap-4">
                <a href="https://www.youtube.com/@elkarec64" target="_blank" rel="noopener noreferrer"
                   class="flex items-center gap-3 p-4 bg-zinc-950 hover:bg-zinc-800 rounded-lg transition-colors group">
                  <svg class="w-6 h-6 text-zinc-400 group-hover:text-red-400 transition-colors" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                  </svg>
                  <span class="text-sm text-zinc-300 group-hover:text-white transition-colors">YouTube</span>
                </a>

                <a href="https://fr.linkedin.com/company/elkarec-audiovisual-events" target="_blank" rel="noopener noreferrer"
                   class="flex items-center gap-3 p-4 bg-zinc-950 hover:bg-zinc-800 rounded-lg transition-colors group">
                  <svg class="w-6 h-6 text-zinc-400 group-hover:text-red-400 transition-colors" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                  <span class="text-sm text-zinc-300 group-hover:text-white transition-colors">LinkedIn</span>
                </a>

                <a href="https://www.facebook.com/elkarec/" target="_blank" rel="noopener noreferrer"
                   class="flex items-center gap-3 p-4 bg-zinc-950 hover:bg-zinc-800 rounded-lg transition-colors group">
                  <svg class="w-6 h-6 text-zinc-400 group-hover:text-red-400 transition-colors" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                  <span class="text-sm text-zinc-300 group-hover:text-white transition-colors">Facebook</span>
                </a>

                <a href="https://x.com/elka_rec" target="_blank" rel="noopener noreferrer"
                   class="flex items-center gap-3 p-4 bg-zinc-950 hover:bg-zinc-800 rounded-lg transition-colors group">
                  <svg class="w-6 h-6 text-zinc-400 group-hover:text-red-400 transition-colors" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                  </svg>
                  <span class="text-sm text-zinc-300 group-hover:text-white transition-colors">X (Twitter)</span>
                </a>

                <a href="https://www.instagram.com/elkarec/" target="_blank" rel="noopener noreferrer"
                   class="flex items-center gap-3 p-4 bg-zinc-950 hover:bg-zinc-800 rounded-lg transition-colors group">
                  <svg class="w-6 h-6 text-zinc-400 group-hover:text-red-400 transition-colors" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                  </svg>
                  <span class="text-sm text-zinc-300 group-hover:text-white transition-colors">Instagram</span>
                </a>

                <a href="https://www.twitch.tv/elka_rec" target="_blank" rel="noopener noreferrer"
                   class="flex items-center gap-3 p-4 bg-zinc-950 hover:bg-zinc-800 rounded-lg transition-colors group">
                  <svg class="w-6 h-6 text-zinc-400 group-hover:text-red-400 transition-colors" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M11.571 4.714h1.715v5.143H11.57zm4.715 0H18v5.143h-1.714zM6 0L1.714 4.286v15.428h5.143V24l4.286-4.286h3.428L22.286 12V0zm14.571 11.143l-3.428 3.428h-3.429l-3 3v-3H6.857V1.714h13.714Z"/>
                  </svg>
                  <span class="text-sm text-zinc-300 group-hover:text-white transition-colors">Twitch</span>
                </a>
              </div>
            </div>

            <!-- Additional Info -->
            <div class="bg-zinc-900 rounded-2xl border border-zinc-800 p-8">
              <h3 class="text-xl font-bold text-white mb-4">Vous préférez nous appeler ?</h3>
              <p class="text-zinc-400 mb-4">
                Pour une réponse plus rapide, n'hésitez pas à nous envoyer un message via le formulaire.
                Nous vous recontacterons dans les plus brefs délais.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const submitButton = document.getElementById('submit-button') as HTMLButtonElement;
  const successMessage = document.getElementById('success-message');
  const errorMessage = document.getElementById('error-message');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    // Disable submit button
    submitButton.disabled = true;
    submitButton.textContent = 'Envoi en cours...';

    // Hide previous messages
    successMessage?.classList.add('hidden');
    errorMessage?.classList.add('hidden');

    try {
      const formData = new FormData(form);
      const response = await fetch('https://api.web3forms.com/submit', {
        method: 'POST',
        body: formData
      });

      const data = await response.json();

      if (data.success) {
        // Show success message
        successMessage?.classList.remove('hidden');
        // Reset form
        form.reset();
      } else {
        throw new Error('Form submission failed');
      }
    } catch (error) {
      // Show error message
      errorMessage?.classList.remove('hidden');
    } finally {
      // Re-enable submit button
      submitButton.disabled = false;
      submitButton.textContent = 'Envoyer le message';
    }
  });
</script>
